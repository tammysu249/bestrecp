<div class="card mb-3">
  <h2 class="card-header h4">
    Category #<%= category.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Category name</dt>
      <dd><%= category.category_name %></dd>

      <dt>Chef</dt>
      <dd>
        <% if @category.chef.present? %>
          <%= link_to category.chef, category.chef %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back category, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_chef == @category.chef %>
          <%= link_to edit_category_url(category), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_chef == @category.chef %>
          <%= link_to category, method: :delete, data: { confirm: "Do you really want to delete this category?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(category.updated_at) %> ago
  </div>
</div>
