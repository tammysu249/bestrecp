<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Recipes

    <a data-toggle="collapse" href="#category_recipes_new_form">
      Add recipe
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @category.recipes.each do |recipe| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to recipe, recipe %>

        <%= link_to recipe, method: :delete, data: { confirm: "Do you really want to delete this recipe" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="category_recipes_new_form">
        <%= render partial: "categories/category_recipes_new_form" %>
      </div>
    </div>

  </ul>
</div>
