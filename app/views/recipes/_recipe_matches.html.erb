<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Matches

    <a data-toggle="collapse" href="#recipe_matches_new_form">
      Add match
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @recipe.matches.each do |match| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to match, match %>

        <%= link_to match, method: :delete, data: { confirm: "Do you really want to delete this match" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="recipe_matches_new_form">
        <%= render partial: "recipes/recipe_matches_new_form" %>
      </div>
    </div>

  </ul>
</div>
